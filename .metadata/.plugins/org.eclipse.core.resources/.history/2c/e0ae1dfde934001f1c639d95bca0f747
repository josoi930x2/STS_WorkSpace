<script>
 //페이지가 준비되면 제일 먼저 실행되는 ready의 함수
 //콜백함수
$(document).ready(function() {
	//id가 'formSubmit'인 버튼을 클릭하면 폼 전송
	$('#formSubmit').on('click', check);
});


	function check() {
		
		if ($('#num1').val() == '' || isNaN(('#num1').val())) {
			alert('정수를 입력하세요');
			n1.focus(); // $('#num1').val().focus()??
			n1.select();
			return;
		}
		if ($('#num2').val() == '' || isNaN(('#num2').val())) {
			alert('정수를 입력하세요');
			n2.focus();
			n2.select();
			return;
		}
		//폼 전송
		$('#form').submit();
	}

</script>
</head>
<body>
	<h1>*계산기4</h1>   
	<!-- 
